<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_margin="@dimen/tendp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="activity.CarDetailsActivity"
    android:orientation="vertical">

    <!--<include layout="@layout/progress_bar"
        android:visibility="visible"/>

    <include layout="@layout/no_internet"/>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/lnbut"
            android:layout_marginBottom="@dimen/thirtydp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/businessimgrecycleview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/nintydp"
                    android:visibility="gone"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginTop="@dimen/tendp"
                    android:id="@+id/txtcarname"
                    style="@style/TittleName"
                    android:textStyle="bold"
                    android:text="@string/app_name" />

                <RelativeLayout
                    android:layout_marginTop="@dimen/tendp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_alignParentStart="true"
                        android:layout_width="wrap_content"
                        android:padding="@dimen/fivedp"
                        android:textSize="@dimen/elevensp"
                        android:id="@+id/txtMoneyBack"
                        style="@style/textviewStyle"
                        android:background="@drawable/rounded_drawble"
                        android:text="Money Back"
                        app:textAllCaps="true"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/green"

                        />
                    <RatingBar
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/rating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:progressTint="@color/pink"
                        android:rating="0" />

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtPrice"
                    style="@style/textviewStyle"
                    android:layout_marginTop="@dimen/tendp"
                    android:text="555555" />

                <LinearLayout
                    android:layout_marginTop="@dimen/tendp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        style="@style/textviewStyle"
                        app:textAllCaps="true"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:text="Car Details" />

                    <LinearLayout
                        android:padding="@dimen/fivedp"
                        android:layout_marginStart="@dimen/tendp"
                        android:background="@drawable/rounded_drawble"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            style="@style/textviewStyle"
                            android:textColor="@color/grey"
                            android:textSize="@dimen/elevensp"
                            android:text="Car id" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_marginStart="@dimen/fivedp"
                            android:layout_width="wrap_content"
                            style="@style/textviewStyle"
                            android:textColor="@color/black"
                            android:textSize="@dimen/elevensp"
                            android:text="ID12345" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/tendp"
                    android:id="@+id/lnrBcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/fivedp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatImageView
                            app:srcCompat="@drawable/ic_km"
                            android:layout_gravity="center_vertical"
                            android:layout_width="@dimen/thirtydp"
                            android:layout_height="@dimen/thirtydp"/>

                        <LinearLayout
                            android:layout_marginStart="@dimen/fivedp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/textviewStyle"
                                android:text="Kilometers"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtkm"
                                android:layout_marginTop="@dimen/fivedp"
                                style="@style/textviewStyle"
                                android:text="32,000 km"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/fivedp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatImageView
                            app:srcCompat="@drawable/ic_calendar"
                            android:layout_gravity="center_vertical"
                            android:layout_width="@dimen/thirtydp"
                            android:layout_height="@dimen/thirtydp"/>

                        <LinearLayout
                            android:layout_marginStart="@dimen/fivedp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/textviewStyle"
                                android:text="Year of purchess"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtYearPurch"
                                android:layout_marginTop="@dimen/fivedp"
                                style="@style/textviewStyle"
                                android:text="March 2009"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/tendp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/fivedp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatImageView
                            app:srcCompat="@drawable/ic_key"
                            android:layout_gravity="center_vertical"
                            android:layout_width="@dimen/thirtydp"
                            android:layout_height="@dimen/thirtydp"/>

                        <LinearLayout
                            android:layout_marginStart="@dimen/fivedp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/textviewStyle"
                                android:text="Owner"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_marginTop="@dimen/fivedp"
                                style="@style/textviewStyle"
                                android:text="First hand"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/fivedp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatImageView
                            app:srcCompat="@drawable/ic_fuel_station"
                            android:layout_gravity="center_vertical"
                            android:layout_width="@dimen/thirtydp"
                            android:layout_height="@dimen/thirtydp"/>

                        <LinearLayout
                            android:layout_marginStart="@dimen/fivedp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/textviewStyle"
                                android:text="Fuel"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtFuel"
                                android:layout_marginTop="@dimen/fivedp"
                                style="@style/textviewStyle"
                                android:text="Petrol"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/tendp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/fivedp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatImageView
                            app:srcCompat="@drawable/ic_manual_transmission"
                            android:layout_gravity="center_vertical"
                            android:layout_width="@dimen/thirtydp"
                            android:layout_height="@dimen/thirtydp"/>

                        <LinearLayout
                            android:layout_marginStart="@dimen/fivedp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/textviewStyle"
                                android:text="Transmission"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtTransmission"
                                android:layout_marginTop="@dimen/fivedp"
                                style="@style/textviewStyle"
                                android:text="Manual"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/fivedp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatImageView
                            app:srcCompat="@drawable/ic_rto_office_building"
                            android:layout_gravity="center_vertical"
                            android:layout_width="@dimen/thirtydp"
                            android:layout_height="@dimen/thirtydp"/>

                        <LinearLayout
                            android:layout_marginStart="@dimen/fivedp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/textviewStyle"
                                android:textSize="@dimen/elevensp"
                                android:text="RTO"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtRTO"
                                android:layout_marginTop="@dimen/fivedp"
                                style="@style/textviewStyle"
                                android:text="MH 06"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginTop="@dimen/tendp"
                    android:id="@+id/txtSimilar"
                    android:layout_width="wrap_content"
                    style="@style/textviewStyle"
                    app:textAllCaps="true"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:text="Similar Cars" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="@dimen/tendp"
                    android:id="@+id/simlerRecyview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</LinearLayout>
