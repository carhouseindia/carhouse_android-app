<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/toolbar"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentInsetStart="0dp"
    app:titleTextAppearance="@style/Toolbar.TitleText"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:layout_gravity="center"
            android:hint="@string/search"
            android:focusable="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/img_close"
            android:imeOptions="actionSearch"
            android:inputType="textCapSentences"
            android:textColorHighlight="@color/text_highlight_color"
            android:textCursorDrawable="@null" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_close"
            android:layout_width="@dimen/thirtydp"
            android:layout_height="@dimen/thirtydp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/fivedp"
            android:layout_centerVertical="true"
            android:tint="@color/lightgrey"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_close"/>

    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>