<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/fivedp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lisellerList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_margin="@dimen/onedp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/fourdp"
            card_view:cardElevation="@dimen/fourdp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgowner"
                    android:layout_width="@dimen/nintydp"
                    android:layout_height="@dimen/eightydp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_no_car" />

                <LinearLayout
                    android:layout_marginStart="@dimen/fivedp"
                    android:layout_marginEnd="@dimen/fivedp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/fivedp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtshopname"
                                style="@style/textviewStyle"
                                android:textSize="@dimen/fourteensp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="test" />


                        </RelativeLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linPrices"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/fivedp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/labelRS"
                            android:layout_width="wrap_content"
                            style="@style/textviewStyle"
                            android:text="@string/Rs"
                            android:textColor="@color/black"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_marginStart="@dimen/fivedp"
                            android:id="@+id/txtPrice"
                            android:layout_width="wrap_content"
                            style="@style/textviewStyle"
                            android:text="78000"
                            android:textColor="@color/black"/>


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linOther"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/fivedp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_weight="1"
                            android:id="@+id/txtPetro"
                            style="@style/textviewStyle"
                            android:text="petrol"
                            android:textColor="@color/black"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_weight="1"
                            android:id="@+id/txtUsed"
                            style="@style/textviewStyle"
                            android:text="1st Owner"
                            android:textColor="@color/black"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_weight="1"
                            android:id="@+id/txtKM"
                            style="@style/textviewStyle"
                            android:text="16000 Km"
                            android:textColor="@color/black"/>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>



        </LinearLayout>


    <View
        android:layout_marginTop="@dimen/fivedp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/onedp"
        android:background="@color/light_grey"/>

</LinearLayout>